<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/strawberry_light">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/matcha_dark"
            android:title="Dividend Calculator App"
            android:titleTextColor="@android:color/white" />

        <!-- Title -->
        <TextView
            android:text="Dividend Calculator App"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Inputs -->
        <EditText
            android:id="@+id/edtInvested"
            android:hint="Invested Amount (RM)"
            android:inputType="numberDecimal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtRate"
            android:hint="Annual Dividend Rate (%)"
            android:inputType="numberDecimal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtMonths"
            android:hint="Months Invested (1â€“12)"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Button -->
        <Button
            android:id="@+id/btnCalculate"
            android:text="CALCULATE"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="16dp"
            android:backgroundTint="@color/matcha_dark"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"/>


        <!-- Result -->
        <TextView
            android:id="@+id/txtResult"
            android:text="Result will appear here"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:padding="16dp"
            android:background="@drawable/result_box"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
